{
  "id": "window",
  "label": "Recreation Model",
  "targetScript": "natcap.invest.recreation.recmodel_client",
  "modelName": "recreation",
  "localDocURI": "../documentation/recreation.html",
  "height": 600,
  "width": 700,
  "elements": [
    {
      "id": "workspace_list",
      "type": "list",
      "elements": [
        {
          "id": "workspace_dir",
          "args_id": "workspace_dir",
          "type": "folder",
          "label": "Workspace",
          "defaultValue": "~/Documents/recreation_workspace",
          "required": true,
          "helpText": "The selected folder is used as the workspace where all intermediate and output files will be written.<br><br>If the selected folder does not exist, it will be created.<br><br><b>If datasets already exist in the selected folder, they will be overwritten.</b>"
        },
        {
          "id": "aoi_path",
          "args_id": "aoi_path",
          "type": "file",
          "label": "Area of Interest (Vector)",
          "defaultValue": "../Recreation/input/initial/BC_AOI.shp",
          "validateAs": {
            "type": "OGR"
          },
          "required": true,
          "helpText": "An OGR-supported vector file representing the area of interest where the model will run the analysis."
        },
        {
          "id": "make_grid",
          "args_id": "make_grid",
          "type": "checkbox",
          "label": "Grid AOI",
          "defaultValue": true,
          "helpText": "Checked box indicates for the area of interest to be gridded. If unchecked, the AOI must contain multiple shapes."
        },
        {
          "id": "grid_type",
          "args_id": "grid_type",
          "type": "dropdown",
          "label": "Grid Type",
          "options": [
            "rectangular",
            "hexagonal"
          ],
          "returns": {
            "mapValues": {
              "rectangular": 0,
              "hexagonal": 1
            }
          },
          "defaultValue": 1,
          "required": true,
          "enabledBy": "grid_type",
          "helpText": "Select whether the grid should contain rectangular or hexagonal units."
        },
        {
          "id": "cell_size",
          "args_id": "cell_size",
          "type": "text",
          "label": "Cell Size",
          "validText": "[0-9]+(\\.[0-9][0-9])?",
          "dataType": "float",
          "required": true,
          "enabledBy": "grid_type",
          "defaultValue": "5000",
          "helpText": "The size of the grid units measured in the projection units of the AOI. For example, UTM projections use meters."
        }
      ]
    },
    {
      "id": "fit_regression",
      "type": "container",
      "collapsible": true,
      "args_id": "fit_regression",
      "label": "Fit Regression",
      "defaultValue": false,
      "elements": [
        {
          "id": "fit_regression_list",
          "type": "list",
          "elements": [
            {
              "id": "predictor_dataset_path",
              "args_id": "predictor_dataset_path",
              "type": "folder",
              "label": "Predictor Directory",
              "required": true,
              "enabledBy": "fit_regression_list",
              "defaultValue": "../Recreation/input/initial/predictors",
              "helpText": "A directory that contains any data to be included in the regression fit."
            },
            {
              "id": "grid_type",
              "args_id": "grid_type",
              "type": "dropdown",
              "label": "Grid Type",
              "options": [
                "Photo User Days",
                "Photo Travel Distance"
              ],
              "returns": {
                "mapValues": {
                  "Photo User Days": "pud",
                  "Photo Travel Distance": "ptd"
                }
              },
              "defaultValue": "pud",
              "required": true,
              "enabledBy": "fit_regression_list",
              "helpText": "Select whether the grid should contain rectangular or hexagonal units."
            }
          ]
        }
      ]
    }
  ]
}
